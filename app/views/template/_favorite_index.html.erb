<div class="favorite-index clearfix">
  <h2>いいね一覧</h2>
  <% favorites.each do |favorite| %>
    <div class="col-xs-3">
      <%= link_to item_path(favorite.item) do %>
        <%= attachment_image_tag favorite.item, :jacket_image, fallback: "/images/no_image.jpg", size: '100x100', class: "img-rounded" %>
      <% end %>
    </div>
    <div class="col-xs-9">
      <table class="table">
        <tbody>
          <tr>
            <td>商品名</td>
            <td colspan="2"><%= favorite.item.name %></td>
          </tr>
          <tr>
            <td>アーティスト名</td>
            <td colspan="2"><%= favorite.item.artist.name %></td>
          </tr>
          <tr>
            <td>値段</td>
            <td colspan="2"><span>¥</span><%= favorite.item.price.to_s(:delimited, delimiter: ',') %></td>
          </tr>
        </tbody>
      </table>
    </div>
  <% end %>
</div>
