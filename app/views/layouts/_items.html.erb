<table class="table table-hover table-inverse">
  <thead>
  <tr>
      <th></th>
      <th>商品名</th>
      <th>アーティスト名</th>
      <th>価格</th>
      <th>ジャンル</th>
      <th>レーベル</th>
      <th>在庫数</th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= attachment_image_tag item, :jacket_image, :fill, 50, 50, fallback: "/images/no_image.jpg" %></td>
        <td><%= link_to item.name, item_path(item) %></td>
        <td><%= item.artist.name %></td>
        <td><%= item.price %></td>
        <td><%= item.genre.name %></td>
        <td><%= item.label.name %></td>
        <td><%= item.stock %></td>
      </tr>
    <% end %>
  </tbody>
</table>
