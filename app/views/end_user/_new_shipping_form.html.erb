<div class="new-shipping-form">
  <h3>新規配送先を追加</h3>

  <%= form_for Shipping.new, url: "/payments/create_shipping" do |f| %>
    <label>名前</label>
    <div class="field">
        <%= f.text_field :last_name, autofocus: true, placeholder: '姓', class: "name" %>
        <%= f.text_field :first_name, autofocus: true, placeholder: '名', class: "name"  %>
    </div>

    <div class="field">
        <%= f.text_field :last_kana_name, autofocus: true, placeholder: 'セイ', class: "name" %>
        <%= f.text_field :first_kana_name, autofocus: true, placeholder: 'メイ', class: "name" %>
    </div>

    <label>住所(ハイフンなし)</label>
    <div class="field">
        <%= f.text_field :postcode, autofocus: true, placeholder: '郵便番号', class: "postal_code" %>
    </div>

    <div class="field">
      <%= f.text_field :prefecture_code, collection: JpPrefecture::Prefecture.all, :value_method => :name, autofocus: true, placeholder: '都道府県', class: "address" %>
        <%= f.text_field :address_city, autofocus: true, placeholder: '市町村名', class: "address" %>
        <%= f.text_field :address_street, autofocus: true, placeholder: '町域', class: "address" %>
        <%= f.text_field :address_building, autofocus: true, placeholder: '番地・建物', class: "address" %>
    </div>

    <label>電話番号</label>
    <div class="field">
        <%= f.text_field :phone, autofocus: true, placeholder: '電話番号', class: "phone" %>
    </div>

    <%= f.submit "追加", class: "btn btn-default button-left" %>
  <% end %>
</div>
