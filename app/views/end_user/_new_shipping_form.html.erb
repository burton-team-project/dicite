<div class="new-shipping-form clearfix">
  <div class="title">
    <h3>新規配送先を追加</h3>
  </div>

  <%= form_for Shipping.new, url: "/payments/create_shipping" do |f| %>
    <div class="field form-group clearfix">
      <label>名前</label><br>
      <%= f.text_field :last_name, autofocus: true, placeholder: '姓', class: "name col-xs-6" %>
      <%= f.text_field :first_name, autofocus: true, placeholder: '名', class: "name col-xs-6" %>
      <%= f.text_field :last_kana_name, autofocus: true, placeholder: 'セイ', class: "name col-xs-6" %>
      <%= f.text_field :first_kana_name, autofocus: true, placeholder: 'メイ', class: "name col-xs-6" %>
    </div>

    <div class="field form-group clearfix">
      <label>住所</label><br>
      <%= f.text_field :postal_code, autofocus: true, placeholder: '郵便番号(ハイフンなし)', class: "postal_code", id:"address_zipcode" %><br>
      <%= f.text_field :prefecture, autofocus: true, placeholder: '都道府県', class: "address form-control", id:"address_prefecture_name" %>
      <%= f.text_field :city, autofocus: true, placeholder: '市町村名', class: "address form-control", id:"address_city" %>
      <%= f.text_field :building, autofocus: true, placeholder: '番地・建物', class: "address form-control", id: "address_street" %>
    </div>

    <div class="field form-group clearfix">
      <label>電話番号</label>
        <%= f.text_field :phone, autofocus: true, placeholder: '電話番号', class: "form-control" %>
    </div>

    <div class="action">
      <%= f.submit "追加", class: "btn btn-primary col-xs-12" %>
    </div>
  <% end %>
</div>
