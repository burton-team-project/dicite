<%= render '/layouts/errors', obj: @item %>

<h3>商品詳細</h3>

<div class="row">
  <div class="col-xs-4">
    <%= attachment_image_tag @item, :jacket_image, fallback: "no_image.jpg", size: '150x150', class: "img-rounded" %>

    <div id="favorites_buttons_<%= @item.id %>">
      <%= render 'end_user/favorites/favorite', item: @item %>
    </div>

    <%= form_for(Cart.new, url:"/carts") do |f| %>
        <%= f.number_field :count, min: 1 %>
        <%= f.hidden_field :item_id, :value => "#{@item.id}" %>
        <%= f.submit "カートに追加", class: "btn btn-danger glyphicon glyphicon-shopping-cart" %>
    <% end %>
  </div>

  <div class="col-xs-8">
    <table class="col-xs-12">
      <tr>
        <td>商品名：</td>
        <td><%= @item.name %></td>
      </tr>
      <tr>
        <td>アーティスト名：</td>
        <td><%= @item.artist.name %></td>
      </tr>
      <tr>
        <td>値段：</td>
        <td><%= @item.price %></td>
      </tr>
      <tr>
        <td>ジャンル名：</td>
        <td><%= @item.genre.name %></td>
      </tr>
      <tr>
        <td>レーベル名：</td>
        <td><%= @item.label.name %></td>
      </tr>
      <tr>
        <td>在庫数：</td>
        <td><%= @item.stock %></td>
      </tr>
      <tr>
        <td>ステータス：</td>
        <td></td>
      </tr>
    </table>

    <div id="review">
      <%= render 'reviews/review', item: @item, review: @review %>
    </div>
  </div>
</div>
