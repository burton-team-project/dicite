<h3>商品詳細</h3>

<div class="row">
  <div class="col-xs-4">
    <%= attachment_image_tag @item, :jacket_image, :fill, 150, 150, fallback: "/images/no_image.jpg" %>

    <div id="favorites_buttons_<%= @item.id %>">
      <%= render 'end_user/favorites/favorite', item: @item %>
    </div>
  </div>

  <div class="col-xs-8">
    <table class="col-xs-12">
      <tr>
        <td>商品名：</td>
        <td><%= @item.name %></td>
      </tr>
      <tr>
        <td>アーティスト名：</td>
        <td><%= @item.artist.name %></td>
      </tr>
      <tr>
        <td>値段：</td>
        <td><%= @item.price %></td>
      </tr>
      <tr>
        <td>ジャンル名：</td>
        <td><%= @item.genre.name %></td>
      </tr>
      <tr>
        <td>レーベル名：</td>
        <td><%= @item.label.name %></td>
      </tr>
      <tr>
        <td>在庫数：</td>
        <td><%= @item.stock %></td>
      </tr>
      <tr>
        <td>ステータス：</td>
        <td></td>
      </tr>
    </table>
  </div>
</div>
