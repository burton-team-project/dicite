<h2>新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <label>名前</label>
  <div class="field">
      <%= f.text_field :last_name, autofocus: true, placeholder: '姓', class: "name" %>
      <%= f.text_field :first_name, autofocus: true, placeholder: '名', class: "name"  %>
  </div>

  <div class="field">
      <%= f.text_field :last_kana_name, autofocus: true, placeholder: 'セイ', class: "name" %>
      <%= f.text_field :first_kana_name, autofocus: true, placeholder: 'メイ', class: "name" %>
  </div>

  <label>住所(ハイフンなし)</label>
  <div class="field">
      <%= f.text_field :postal_code, autofocus: true, placeholder: '郵便番号', class: "postal_code", id:"address_zipcode" %>
  </div>

  <div class="field">
      <%= f.text_field :prefecture, autofocus: true, placeholder: '都道府県', class: "address", id:"address_prefecture_name" %>
      <%= f.text_field :city, autofocus: true, placeholder: '市町村名', class: "address", id:"address_city" %>
      <%= f.text_field :building, autofocus: true, placeholder: '番地・建物', class: "address", id: "address_street" %>
  </div>

  <label>電話番号</label>
  <div class="field">
      <%= f.text_field :phone, autofocus: true, placeholder: '電話番号', class: "phone" %>
  </div>

  <label>メールアドレス</label>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <label>パスワード</label>
  <div class="field">
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <label>パスワード確認</label>
  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "登録" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
