<div class="orders">
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th>受注ID</th>
        <th>受注日時</th>
        <th>注文者名</th>
        <th>配送状況</th>
      </tr>
    </thead>

    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.id %></td>
          <td><%= order.updated_at.strftime('%Y/%m/%d %H:%M') %></td>
          <td><%= link_to order.user.last_name + order.user.first_name, admin_user_path(order.user) %></td>
          <td>
            <%= form_for(order, url: admin_order_path(order)) do |f| %>
              <%= f.select :shipping_status, Order.shipping_statuses.keys.to_a, {} %>
              <%= f.submit %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
